{
	"$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"arrowParentheses": "always",
			"jsxQuoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingComma": "all",
			"quoteStyle": "single",
			"quoteProperties": "asNeeded",
			"bracketSpacing": true,
			"bracketSameLine": false
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"useImportType": "off"
			}
		},
		"ignore": ["node_modules", ".yarn", "**/dist"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120,
		"ignore": ["node_modules", ".yarn", "**/dist"]
	}
}
